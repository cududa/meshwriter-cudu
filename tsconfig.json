{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "declarationDir": "./dist",
        "emitDeclarationOnly": true,
        "outDir": "./dist",
        "strict": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "types": ["@babylonjs/core"]
    },
    "include": [
        "src/**/*.js",
        "src/types.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "examples",
        "examples-vite",
        "fonts"
    ]
}
