{
    "name": "meshwriter",
    "version": "3.0.0",
    "description": "Generate text in BABYLON meshes",
    "type": "module",
    "main": "./dist/meshwriter.cjs.js",
    "module": "./dist/meshwriter.esm.js",
    "types": "./src/types.d.ts",
    "exports": {
        ".": {
            "import": "./dist/meshwriter.esm.js",
            "require": "./dist/meshwriter.cjs.js",
            "types": "./src/types.d.ts"
        },
        "./fonts/*": "./fonts/*.js",
        "./fonts": "./fonts/index.js"
    },
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "build:rollup": "rollup -c",
        "build:types": "tsc",
        "build": "npm run build:rollup && npm run build:types",
        "typecheck": "tsc --noEmit",
        "dev": "rollup -c -w"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/briantbutton/meshwriter"
    },
    "keywords": [
        "babylonjs",
        "babylon",
        "meshwriter",
        "3d-text",
        "webgl"
    ],
    "author": "Brian T Button",
    "license": "MIT",
    "peerDependencies": {
        "@babylonjs/core": ">=6.0.0",
        "earcut": ">=2.0.0"
    },
    "peerDependenciesMeta": {
        "@babylonjs/core": {
            "optional": false
        },
        "earcut": {
            "optional": false
        }
    },
    "devDependencies": {
        "@babylonjs/core": "^8.0.0",
        "@rollup/plugin-commonjs": "^28.0.0",
        "@rollup/plugin-node-resolve": "^16.0.0",
        "@rollup/plugin-terser": "^0.4.0",
        "earcut": "^3.0.2",
        "rollup": "^4.0.0",
        "typescript": "^5.0.0"
    },
    "files": [
        "dist",
        "fonts",
        "src"
    ],
    "bugs": {
        "url": "https://github.com/briantbutton/meshwriter/issues"
    },
    "homepage": "https://github.com/briantbutton/meshwriter#readme"
}
